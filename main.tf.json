{
  "data": {
    "aws_iam_policy_document": {
      "ms1_lambda_creds": {
        "statement": {
          "effect": "Allow",
          "actions": [
            "sts:AssumeRole"
          ],
          "principals": {
            "identifiers": [
              "lambda.amazonaws.com",
              "apigateway.amazonaws.com"
            ],
            "type": "Service"
          }
        }
      },
      "ms1_lambda_access_creds": {
        "statement": [
          {
            "effect": "Allow",
            "actions": [
              "s3:AbortMultipartUpload",
              "s3:ListMultipartUploadParts",
              "s3:ListBucketMultipartUploads",
              "s3:PutObject",
              "s3:GetObject",
              "s3:DeleteObject"
            ],
            "resources": [
              "arn:aws:s3:::${resource.aws_s3_bucket.ms1_s3.bucket}",
              "arn:aws:s3:::${resource.aws_s3_bucket.ms1_s3.bucket}/*"
            ]
          },
          {
            "effect": "Allow",
            "actions": [
              "sns:Publish",
              "sns:Subscribe"
            ],
            "resources": [
              "${resource.aws_sns_topic.ms1_topic.arn}"
            ]
          },
          {
            "effect": "Allow",
            "actions": [
              "logs:CreateLogGroup",
              "logs:CreateLogStream",
              "logs:PutLogEvents"
            ],
            "resources": [
              "${resource.aws_cloudwatch_log_group.ms1_cloudwatch.arn}:*",
              "${resource.aws_cloudwatch_log_group.ms1_cloudwatch.arn}:*:*"
            ]
          }
        ]
      }
    }
  },
  "resource": {
    "aws_cloudwatch_log_group": {
      "ms1_cloudwatch": {
        "name": "/aws/lambda/throwaway-test-123-log-group",
        "retention_in_days": 7
      }
    },
    "aws_iam_policy": {
      "ms1_lambda_policy": {
        "name": "throwaway-test-123-policy-policy",
        "policy": "${data.aws_iam_policy_document.ms1_lambda_access_creds.json}"
      }
    },
    "aws_iam_role": {
      "ms1_lambda_role": {
        "name": "throwaway-test-123-role",
        "assume_role_policy": "${data.aws_iam_policy_document.ms1_lambda_creds.json}"
      }
    },
    "aws_iam_role_policy_attachment": {
      "ms1_lambda_policy_attachment": {
        "role": "${resource.aws_iam_role.ms1_lambda_role.name}",
        "policy_arn": "${resource.aws_iam_policy.ms1_lambda_policy.arn}"
      }
    },
    "aws_s3_bucket": {
      "ms1_s3": {
        "bucket": "throwaway-test-123-bucket"
      }
    },
    "aws_lambda_function": {
      "ms1_lambda": {
        "function_name": "lambda-throwaway-test-123",
        "role": "${resource.aws_iam_role.ms1_lambda_role.arn}",
        "runtime": "python3.8",
        "handler": "handler.handler",
        "filename": "${path.root}/lambdas/template/zipped/handler.py.zip",
        "environment": {
          "variables": {
            "S3_BUCKET_NAME": "${resource.aws_s3_bucket.ms1_s3.bucket}",
            "SNS_TOPIC_ARN": "${resource.aws_sns_topic.ms1_topic.arn}"
          }
        }
      }
    },
    "aws_sns_topic": {
      "ms1_topic": {
        "name": "throwaway-test-123-topic"
      }
    },
    "aws_lambda_permission": {
      "ms1_sns_invoke_cred": {
        "statement_id": "AllowExecutionFromSNS",
        "action": "lambda:InvokeFunction",
        "function_name": "${resource.aws_lambda_function.ms1_lambda.function_name}",
        "principal": "sns.amazonaws.com",
        "source_arn": "${resource.aws_sns_topic.ms1_topic.arn}"
      }
    },
    "aws_sns_topic_subscription": {
      "ms1_subscription": {
        "topic_arn": "${resource.aws_sns_topic.ms1_topic.arn}",
        "protocol": "lambda",
        "endpoint": "${resource.aws_lambda_function.ms1_lambda.arn}",
        "filter_policy": "{\"type\":[\"type1\",\"type2\"]}",
        "filter_policy_scope": "MessageAttributes"
      }
    }
  },
  "terraform": {
    "required_providers": {
      "aws": {
        "source": "hashicorp/aws",
        "version": "5.20.0"
      }
    }
  },
  "provider": [
    {
      "aws": {
        "region": "us-east-2",
        "profile": "chopshop"
      }
    }
  ]
}